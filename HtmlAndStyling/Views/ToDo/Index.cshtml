@{
ViewData["Title"] = "To-do list";
}

@model List<ToDoItem>

<div>
    <a class="btn btn-primary" asp-action="create">Create an item</a>
    
    @{
        if (Model.Count == 0)
        {
            <h2>There are no to-do items</h2>
            return;
        }
    }

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @{
            foreach (ToDoItem item in Model)
            {
                <tr>
                    <td style="background-color: @item.PriorityColor()">@item.Title</td>
                    <td style="background-color: @item.PriorityColor()">@item.StartDate</td>
                    <td style="background-color: @item.PriorityColor()">@item.EndDate</td>
                    <td>
                        <a class="btn disabled">View</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>